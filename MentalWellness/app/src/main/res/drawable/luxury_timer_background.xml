<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base circle with gradient -->
    <item>
        <shape android:shape="oval">
            <gradient
                android:type="radial"
                android:gradientRadius="100%p"
                android:startColor="#80FFFFFF"
                android:centerColor="#80F5F5F5"
                android:endColor="#80E0E0E0" />
        </shape>
    </item>
    
    <!-- Gold ring -->
    <item
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp">
        <shape android:shape="oval">
            <stroke
                android:width="2dp"
                android:color="#FFD700" />
        </shape>
    </item>
    
    <!-- Inner circle with semi-transparent background -->
    <item
        android:left="12dp"
        android:top="12dp"
        android:right="12dp"
        android:bottom="12dp">
        <shape android:shape="oval">
            <solid android:color="#B3FFFFFF" />
        </shape>
    </item>
</layer-list> 